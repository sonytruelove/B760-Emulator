<Window x:Class="wpf.answerResult"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Test Results" Height="300" Width="400">
    <Grid>
  <Grid.Background>
            <!-- Задний фон для главного окна -->
            <SolidColorBrush Color="LightBlue"/>
        </Grid.Background>
        <TextBlock x:Name="resultText" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
    </Grid>
</Window>